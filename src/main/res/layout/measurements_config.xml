<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/measurements_use_backshots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measurements_use_backshots"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <View android:id="@+id/measurements_backshot_export_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measurements_export"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <Spinner
            android:id="@+id/measrements_export_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

    </View>

</LinearLayout>